{
  "name": "dex-backend",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "npm run prod",
    "server": "node -r dotenv/config ./dist-server/bin/www dotenv_config_path=./.env",
    "transpile": "babel ./server --out-dir dist-server",
    "dev": "cross-env NODE_ENV=development npm-run-all build server",
    "prod": "NODE_ENV=production npm-run-all build server",
    "clean": "rimraf dist-server",
    "build": "npm-run-all clean transpile",
    "test": "jest --verbose --coverage --passWithNoTests",
    "watch:test": "jest --verbose --coverage --passWithNoTests --watchAll",
    "watch:dev": "nodemon"
  },
  "dependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "babel-jest": "^26.0.1",
    "cookie-parser": "~1.4.4",
    "core-js-bundle": "^3.6.5",
    "debug": "~4.1.1",
    "dotenv": "^8.2.0",
    "eslint": "^7.0.0",
    "express": "~4.17.1",
    "jest": "^26.0.1",
    "mongoose": "^5.9.15",
    "morgan": "~1.10.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2"
  },
  "devDependencies": {
    "cross-env": "^7.0.2",
    "nodemon": "^2.0.4",
    "supertest": "^4.0.2"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "nodemonConfig": {
    "exec": "npm run dev",
    "watch": [
      "server/*",
      "public/*"
    ],
    "ignore": [
      "**/__tests__/**",
      "*.test.js",
      "*.spec.js"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "setupFiles": [
      "./jest.init.js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist-server"
    ]
  }
}
